<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout_item_history"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/dimen4"
    android:layout_marginBottom="@dimen/dimen4"
    android:background="@drawable/selector_item"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen32"
        android:orientation="horizontal"
        android:paddingTop="6dp"
        android:paddingLeft="@dimen/dimen20"
        android:paddingRight="@dimen/dimen20">




        <TextView
            android:id="@+id/historical_offer_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/shape_mai_blue_bg"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/dimen8"
            android:paddingTop="@dimen/dimen2"
            android:paddingRight="@dimen/dimen8"
            android:paddingBottom="@dimen/dimen2"
            android:textColor="#2196F3"
            android:textSize="@dimen/text_12"
            tools:text="买" />
        <TextView
            android:id="@+id/txt_his_pair_dui"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dimen4"
            android:layout_weight="1"
            android:textSize="@dimen/text_12"
            android:textColor="#222222"
            android:text="M/ABC" />

        <TextView
            android:id="@+id/txt_his_pair_state"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="已成交"
            android:paddingLeft="@dimen/dimen9"
            android:paddingRight="@dimen/dimen9"
            android:paddingTop="@dimen/dimen3"
            android:paddingBottom="@dimen/dimen3"
            android:textColor="#9D9D9D"
            >

        </TextView>

    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginTop="@dimen/dimen6"
        android:background="#E1E1E1"
        android:layerType="software" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/dimen20"
        android:paddingRight="@dimen/dimen20">

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                 android:paddingTop="3dp"
                android:paddingBottom="8dp"
                >
                <TextView
                    android:id="@+id/txt_his_pair_dui_ps"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:text="价格(M)"
                    android:textColor="#9D9D9D"
                    android:textSize="@dimen/text_14"
                  />

                <TextView
                    android:id="@+id/txt_his_pair_dui_ps1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginTop="@dimen/dimen8"
                    android:gravity="center_vertical"
                    android:text="0.5462"
                    android:textColor="#404040"
                    android:textSize="@dimen/text_14"
                    />

            </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            >
            <TextView
                android:id="@+id/txt_his_pair_dui_ns"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:text="数量(M)"
                android:textColor="#9D9D9D"
                android:textSize="@dimen/text_14"
                />

            <TextView
                android:id="@+id/txt_his_pair_dui_ns1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginTop="@dimen/dimen8"
                android:gravity="center_vertical"
                android:text="1000"
                android:textColor="#404040"
                android:textSize="@dimen/text_14"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="right"
            android:orientation="vertical"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            >
            <TextView
                android:id="@+id/txt_his_pair_dui_as"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="合计(M)"
                android:textColor="#9D9D9D"
                android:textSize="@dimen/text_14"
                />

            <TextView
                android:id="@+id/txt_his_pair_dui_as1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen8"
                android:text="1265111"
                android:textColor="#404040"
                android:textSize="@dimen/text_14"
                />

        </LinearLayout>

    </LinearLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#E1E1E1"
        android:layerType="software" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen32"
        android:gravity="center|left"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/dimen20"
        android:paddingRight="@dimen/dimen20">

        <TextView
            android:id="@+id/historical_time_x"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_12"
            android:textColor="#738699"
            android:text="2018-10-10 15:06:01" />

        <TextView
            android:id="@+id/historical_time_wt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="委托量：404040"
            android:paddingLeft="@dimen/dimen9"
            android:paddingRight="@dimen/dimen9"
            android:paddingTop="@dimen/dimen3"
            android:paddingBottom="@dimen/dimen3"
            android:textColor="#404040"
            >
        </TextView>

    </LinearLayout>




</LinearLayout>