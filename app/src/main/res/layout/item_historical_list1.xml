<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout_item_history"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/selector_item"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/dimen20"
        android:paddingRight="@dimen/dimen20">

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                >
                <TextView
                    android:id="@+id/txt_item_s_p"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    tools:text="价格(M)"
                    android:textColor="#9D9D9D"
                    android:textSize="@dimen/text_14"
                  />

                <TextView
                    android:id="@+id/txt_im_price"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginTop="@dimen/dimen8"
                    android:gravity="center_vertical"
                    tools:text="0.5462"
                    android:textColor="#404040"
                    android:textSize="@dimen/text_14"
                    />

            </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            >
            <TextView
                android:id="@+id/txt_item_s_n"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_vertical"
                tools:text="数量(M)"
                android:textColor="#9D9D9D"
                android:textSize="@dimen/text_14"
                />

            <TextView
                android:id="@+id/txt_im_num"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginTop="@dimen/dimen8"
                android:gravity="center_vertical"
                tools:text="1000"
                android:textColor="#404040"
                android:textSize="@dimen/text_14"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="right"
            android:orientation="vertical"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            >
            <TextView
                android:id="@+id/txt_item_s_a"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="合计(M)"
                android:textColor="#9D9D9D"
                android:textSize="@dimen/text_14"
                />

            <TextView
                android:id="@+id/txt_im_all"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen8"
                tools:text="1265111"
                android:textColor="#404040"
                android:textSize="@dimen/text_14"
                />

        </LinearLayout>

    </LinearLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen32"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/dimen20"
        android:paddingRight="@dimen/dimen20">




        <TextView
            android:id="@+id/historical_offer_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/shape_mai_blue_bg"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/dimen8"
            android:paddingTop="@dimen/dimen2"
            android:paddingRight="@dimen/dimen8"
            android:paddingBottom="@dimen/dimen2"
            android:textColor="#2196F3"
            android:textSize="@dimen/text_12"
            tools:text="买" />
        <TextView
            android:id="@+id/historical_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dimen4"
            android:layout_weight="1"
            android:textSize="@dimen/text_12"
            android:textColor="#738699"
            tools:text="2018-10-10 15:06:01" />

        <TextView
            android:id="@+id/item_chedan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="撤销"
            android:paddingLeft="@dimen/dimen9"
            android:paddingRight="@dimen/dimen9"
            android:paddingTop="@dimen/dimen3"
            android:paddingBottom="@dimen/dimen3"
            android:textColor="#FF2196F3"
            android:background="@drawable/shape_trade_input_min_bg"
            >

        </TextView>

    </LinearLayout>


    <View
        android:layout_width="match_parent"
        android:layout_marginTop="@dimen/dimen8"
        android:layout_height="0.5dp"
        android:background="#E1E1E1"
        android:layerType="software" />

</LinearLayout>